{% extends 'base.html.twig' %}

{% block title %}Event index
{% endblock %}

{% block main %}
	<h1>Event</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Description</th>
				<th>EventDateStart</th>
				<th>EventDateEnd</th>
				{% if is_granted("ROLE_ADMIN") %} 
				<th>actions</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
				<tr>

					<td>{{ event.id }}</td>
					<td>{{ event.title }}</td>
					<td>{{ event.description }}</td>
					<td>{{ event.eventDateStart ? event.eventDateStart|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ event.eventDateEnd ? event.eventDateEnd|date('Y-m-d H:i:s') : '' }}</td>
					{% if is_granted("ROLE_ADMIN") %}
						<td>
							<a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
							<a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
						</td>
					{% endif %}
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted("ROLE_ADMIN") %}
		<a href="{{ path('app_event_new') }}">+ Event</a>
	{% endif %}
{% endblock %}
