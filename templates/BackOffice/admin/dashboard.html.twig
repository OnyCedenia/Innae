{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block main %}
<div class="dashboard">
    <aside class="sidebar">
        <img src="{{ asset('assets/img/ilustrationCedenia.jpg') }}" alt="Avatar Admin" class="avatar">
        <h2>{{ app.user.username }}</h2>
        
        <nav class="admin-links">
            <ul>
                <li><a href="{{ path('backoffice_order_index') }}">Bérets</a></li>
                <li><a href="{{ path('app_event_index') }}">Événements</a></li>
                <li><a href="{{ path('app_contact_index') }}">Messages Contact</a></li>
            </ul>
        </nav>
    </aside>

    <main class="dashboard-main">
        <section class="welcome-panel">
            <h2>Bienvenue, {{ app.user.username }} !</h2>
            <p>Contenu du panneau de bienvenue ici.</p>
        </section>

        <section class="todo-panel">
            <h3>Que vas-tu faire aujourd'hui ?</h3>
            <textarea>{{ adminPenseBete }}</textarea>
        </section>
    </main>
</div>

{% endblock %}
